<div class="container">
  <h1>Great Products</h1>
  <% @products.each do |product| %>
    <div class="card-product m-2 w-50">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><%= product.name %></h2>
        <p><%= product.tagline %></p>
      </div>
    </div>
  <% end %>
</div>
